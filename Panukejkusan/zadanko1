let example1 = "This is an example.";
let example2 = "In this article, I will show you how to create a framework-agnostic plugin. For the purpose of this tutorial, we will be creating a carousel/slider plugin — the goal of the plugin.";

console.log(countWordsInString(example1));
console.log(countWordsInString(example2));

function countWordsInString(str) {
    // Use a regular expression to split the string by spaces, tabs, and newlines
    const wordsArray = str.split(/\s+/).filter(word => word.length > 0);
  
    // Count the number of words
    const wordCount = wordsArray.length;
  
    return wordCount;
  }
  
  
